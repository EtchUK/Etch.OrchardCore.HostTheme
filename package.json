{
    "name": "etch.orchardcore.hosttheme",
    "version": "1.0.0",
    "description": "Theme for host site.",
    "author": "Etch UK Ltd.",
    "scripts": {
        "build": "npm install --no-audit && npm run bundle:prod",
        "bundle:dev": "npm install && webpack --config ./BuildConfigs/webpack.config.dev.js -d",
        "bundle:prod": "webpack --config ./BuildConfigs/webpack.config.prod.js -p",
        "bundle:watch": "webpack --config ./BuildConfigs/webpack.config.dev.js -d --watch",
        "develop": "npm run bundle:watch",
        "start": "npm install && npm run develop"
    },
    "devDependencies": {
        "@babel/core": "^7.6.4",
        "@babel/preset-env": "^7.6.3",
        "autoprefixer": "^9.6.5",
        "babel-loader": "^8.1.0",
        "clean-webpack-plugin": "^2.0.2",
        "concurrently": "^4.1.2",
        "copy-webpack-plugin": "^5.1.1",
        "copyfiles": "^2.2.0",
        "css-loader": "^2.1.1",
        "mini-css-extract-plugin": "^0.5.0",
        "node-sass": "^4.13.1",
        "npm-run-all": "^4.1.5",
        "optimize-css-assets-webpack-plugin": "^5.0.3",
        "postcss-loader": "^3.0.0",
        "sass-loader": "^7.3.1",
        "ts-loader": "^6.2.2",
        "tslint": "^5.20.1",
        "tslint-loader": "^3.5.4",
        "typescript": "^3.8.3",
        "webpack": "^4.43.0",
        "webpack-cli": "^3.3.11",
        "webpack-fix-style-only-entries": "^0.2.2"
    },
    "dependencies": {
        "core-js": "^3.6.5",
        "lg-video.js": "^1.0.0",
        "lightgallery.js": "^1.1.3",
        "normalize.css": "^8.0.1",
        "picturefill": "^3.0.3"
    }
}
