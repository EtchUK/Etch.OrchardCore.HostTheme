{
    "name": "etch.orchardcore.hosttheme",
    "version": "1.1.0",
    "description": "Theme for host site.",
    "author": "Etch UK Ltd.",
    "scripts": {
        "build": "npm install --no-audit && npm run bundle:prod",
        "bundle:dev": "npm install && webpack --config ./BuildConfigs/webpack.config.js --mode development",
        "bundle:prod": "webpack --config ./BuildConfigs/webpack.config.prod.js --mode production",
        "bundle:watch": "webpack --config ./BuildConfigs/webpack.config.js --mode development --watch",
        "develop": "npm run bundle:watch",
        "start": "npm install && npm run develop"
    },
    "devDependencies": {
        "@babel/core": "^7.15.5",
        "@babel/preset-env": "^7.15.4",
        "@types/rellax": "^1.7.2",
        "autoprefixer": "^10.3.4",
        "babel-loader": "^8.2.2",
        "clean-webpack-plugin": "^4.0.0",
        "copy-webpack-plugin": "^10.2.4",
        "copyfiles": "^2.1.0",
        "core-js": "^3.17.2",
        "css-loader": "^6.2.0",
        "css-minimizer-webpack-plugin": "^3.0.2",
        "image-minimizer-webpack-plugin": "^3.2.3",
        "imagemin": "^8.0.1",
        "imagemin-mozjpeg": "^10.0.0",
        "imagemin-optipng": "^8.0.0",
        "imagemin-pngquant": "^9.0.1",
        "imagemin-svgo": "^10.0.1",
        "mini-css-extract-plugin": "^2.6.0",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.4.12",
        "postcss-loader": "^6.1.1",
        "postcss-scss": "^4.0.3",
        "prettier": "^2.0.5",
        "sass": "^1.39.0",
        "sass-loader": "^12.1.0",
        "sass-mq": "^6.0.0",
        "stylelint": "^14.6.1",
        "stylelint-config-prettier": "^9.0.3",
        "stylelint-config-recommended": "^7.0.0",
        "stylelint-prettier": "^2.0.0",
        "stylelint-webpack-plugin": "^3.0.1",
        "svgo": "^2.5.0",
        "ts-loader": "^9.2.5",
        "tslint": "^6.1.1",
        "tslint-loader": "^3.5.4",
        "typescript": "^4.4.2",
        "webpack": "^5.52.0",
        "webpack-cli": "^4.8.0",
        "webpack-remove-empty-scripts": "^0.7.1"
    },
    "dependencies": {
        "lg-video.js": "^1.0.0",
        "lightgallery.js": "^1.1.3",
        "normalize.css": "^8.0.1",
        "picturefill": "^3.0.3",
        "rellax": "^1.10.0"
    }
}
